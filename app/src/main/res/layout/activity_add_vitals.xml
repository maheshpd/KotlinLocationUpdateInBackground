            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pulse Rate: "
                android:textColor="@color/textcolor" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bmp "
